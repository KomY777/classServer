<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.Service.repository.UserRepository">
    <insert id="addUser"  parameterType="com.Service.entity.UserEntity">
        insert into user(username,password,identity,name)
        values (#{username},#{password},#{identity},#{name});
    </insert>
    <update id="updateUser" parameterType="com.Service.entity.UserEntity">
        update user
        set password=#{password},name=#{name}
        where id=#{id}
    </update>
    <delete id="removeUser" parameterType="integer">
        delete from user
        where id=#{id}
    </delete>
    <select id="login" resultType="com.Service.entity.UserEntity">
        select * from user
        where username=#{username},password=#{password}
    </select>
</mapper>